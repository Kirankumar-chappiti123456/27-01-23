#include<stdio.h>
int multiplication(int a,int y,int sum)
{
    
    while(a--)
    {
        sum=sum+y;
    }
    printf("the multiplication :%d",sum);
}
int main()
{
    int a,y,sum=0;
    printf("enter the number:");
    scanf("%d %d",&a,&y);
    int (*fptr)(int ,int,int)=multiplication;
    fptr(a,y,sum);
}

